		<!-- System tools -->
		<menu id="system" label="System" >
			<item label="System update">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -hold -e sudo apt_system_update</execute></action>
			</item>
			<item label="Flatpak update">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -hold -e sudo flatpak update</execute></action>
			</item>
			<item label="PC Info">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -geometry 100x30+0+0 -hold -e pcinfo</execute></action>
			</item>
			<item label="Memory usage">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -hold -e free -h</execute></action>
			</item>
			<item label="Hdd usage">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -e ncdu /</execute></action>
			</item>
			<item label="Change resolution">
				<action name="Execute"><execute>arandr</execute></action>
			</item>
			<item label="Gnome-disks">
				<action name="Execute"><execute>gnome-disks</execute></action>
			</item>
			<item label="Partition manager">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -e sudo cfdisk</execute></action>
			</item>
			<item label="Gparted">
				<action name="Execute"><execute>gparted</execute></action>
			</item>

			<separator />
			<item label="Network ports">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -hold -e ss -at</execute></action>
			</item>
