			</item>
			<item label="Services">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -e sudo systemctl list-unit-files --type=service</execute></action>
			</item>
			<item label="Power usage">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -geometry 100x50+0+0 -e sudo powertop</execute></action>
			</item>
			<item label="Temperature monitor">
				<action name="Execute"><execute>xsensors</execute></action>
			</item>
