			<item label="Installed apps">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -geometry 80x70+0+0 -e sudo list_manual_apps</execute></action>
			</item>
			<item label="Active partitions">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -hold -e lsblk</execute></action>
			</item>
