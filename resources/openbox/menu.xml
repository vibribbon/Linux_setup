		<!-- File system locations -->
		<menu id="places" label="Places" >
			<item label="Current Home Folder">
				<action name="Execute"><execute>pcmanfm ~/</execute></action>
			</item>
			<item label="/home/ Users Folder">
				<action name="Execute"><execute>pcmanfm /home/</execute></action>
			</item>
			<item label="/etc/ System Folder">
				<action name="Execute"><execute>pcmanfm /etc/</execute></action>
			</item>
			<item label="/usr/local/bin/ Folder">
				<action name="Execute"><execute>pcmanfm /usr/local/bin/</execute></action>
			</item>
			<item label="/mnt/ Mounts Folder">
				<action name="Execute"><execute>pcmanfm /mnt/</execute></action>
			</item>
			<item label="/media/ Media Folder">
				<action name="Execute"><execute>pcmanfm /media/</execute></action>
			</item>
			<item label="NAS Public">
				<action name="Execute"><execute>pcmanfm smb://192.168.1.5/s_public/</execute></action>
			</item>
			<item label="NAS Private">
				<action name="Execute"><execute>pcmanfm smb://192.168.1.5/s_private/</execute></action>
			</item>
		</menu>


		<!-- Common config scripts-->
		<menu id="config" label="Config" >
			<item label="Edit Openbox Autostart">
				<action name="Execute"><execute>geany ~/.config/openbox/autostart</execute></action>
			</item>
			<item label="Edit Openbox Menu">
				<action name="Execute"><execute>geany ~/.config/openbox/menu.xml</execute></action>
			</item>
			<item label="Edit Openbox Keybindings">
				<action name="Execute"><execute>geany ~/.config/openbox/rc.xml</execute></action>
			</item>
			<item label="Edit Bashrc (bash config)">
				<action name="Execute"><execute>geany ~/.bashrc</execute></action>
			</item>
			<item label="Edit fstab (mount points)">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -e sudo nano /etc/fstab</execute></action>
			</item>
			<item label="Edit Apt Source (Packages)">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -e sudo nano /etc/apt/sources.list</execute></action>
			</item>
			<item label="Edit Sudoers (superusers)">
				<action name="Execute"><execute>uxterm -fa default -fs 12 -e sudo nano /etc/sudoers</execute></action>
			</item>
		</menu>


